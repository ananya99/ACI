<mujoco name="maze">
    <asset>
        <texture name="checker_tex_2d" file="checker_texture.png" type="2d" />
        <!-- <material name="floor_mat" texture="checker_tex_2d" texuniform="true"/> -->
        <material name="floor_mat" rgba="0.1 0.1 0.1 1.0" shininess="0.0" specular="0.0" />

        <texture name="checker_tex_cube" file="checker_texture.png" type="cube" />
        <material name="block_mat" texture="checker_tex_cube" />

        <texture name="vertical_pattern" file="vertical_pattern.png" type="2d" />
    </asset>
    <default>
        <default class="maze_block">
            <geom material="block_mat" type="box" gap="0.05" margin="0.1" group="1" />
        </default>
        <default class="maze_target">
            <site type="sphere" group="1" />
            <light exponent="0.1" cutoff="180" dir="0 0 -1" diffuse="1 1 1" ambient="1 1 1"
                specular="1 1 1" castshadow="false" />
        </default>
    </default>
    <worldbody>
        <geom name="floor" type="plane" pos="0 0 -0.05" size="1 1 1" material="floor_mat"
            condim="1" group="1" />
    </worldbody>
</mujoco>